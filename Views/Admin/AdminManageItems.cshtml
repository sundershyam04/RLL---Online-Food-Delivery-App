
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminManageItems</title>
</head>
<body>
    <div class="card">
        <h2 style="font-size:40px;">Manage Items</h2>
        <div class="blue_links">
            <div>
                <h2><a href="@Url.Action("AddNewItems","Admin", Session["AdminModel"])">Add New Food Item</a></h2>
                <p>Add new food items for your restaurant</p>
                <a><img src="https://media.istockphoto.com/id/1195705173/vector/add-to-cart-icon-adding-shopping-cart.jpg?s=612x612&w=0&k=20&c=lKq9JyQKD0-0wn2k-eBrBT5-Vreq0EZovVDxO4nAAgs=" style="width: 200px; height: 200px; position:relative; margin-left: 600px; margin-top: -140px;" /></a>
            </div>
            <hr />
            <div>
                <h2><a href="@Url.Action("UpdateDeleteItems","Admin", Session["AdminModel"]))">Update/Delete Food Items</a></h2>
                <p style="display:inline;"><span>Update existing food item's name / price /</span><span>category / type for your restaurant.</span><span>You can delete existing food item.</span></p>
                <a>
                    <img src="https://www.shutterstock.com/image-vector/product-not-available-icon-600w-588716690.jpg" style="width: 200px; height: 200px;  clear:right; float:left; position:relative; margin-left: 600px; margin-bottom: 10px; margin-top: -140px;">
                </a>
            </div>
            <hr />
            <div>
                <h2><a href="@Url.Action("RestockItems","Admin", Session["AdminModel"]))">Restock Food Items</a></h2>
                <p>Restock food items for your restaurant !</p>
                <a><img src="https://www.shutterstock.com/image-vector/cart-icon-vector-flat-design-600w-662296672.jpg" style="width: 200px; height: 200px; position:relative; margin-left: 600px; margin-top: -120px;" /></a>
            </div>
        </div>
    </div>
</body>
</html>
